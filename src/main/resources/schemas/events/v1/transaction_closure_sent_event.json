{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "templates/events/transaction_closure_sent_event/schema.json",
  "properties": {
    "version": {
      "type": "string",
      "default": "v1"
    },
    "id": {
      "type": "string"
    },
    "transactionId": {
      "type": "string"
    },
    "rptId": {
      "type": "string"
    },
    "paymentToken": {
      "type": "string"
    },
    "transactionEventCode": {
      "const": "TRANSACTION_AUTHORIZATION_STATUS_UPDATED"
    },
    "creationDate": {
      "type": "string",
      "format": "date-time"
    },
    "data": {
      "type": "object",
      "javaType" : "it.pagopa.generated.ecommerce.events.v1.TransactionUserReceiptAddedData",
      "properties": {
        "newTransactionStatus": {
          "$ref": "./transaction_status.json"
        }
      },
      "required": [
        "newTransactionStatus"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "version",
    "authorizationResult"
  ],
  "additionalProperties": false
}
