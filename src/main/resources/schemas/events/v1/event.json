{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "templates/events/event/schema.json",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "transactionId": {
      "type": "string"
    },
    "rptId": {
      "type": "string"
    },
    "paymentToken": {
      "type": "string"
    },
    "transactionEventCode": {
      "type": "string",
      "enum": [
        "TRANSACTION_ACTIVATED_EVENT",
        "TRANSACTION_ACTIVATION_REQUESTED_EVENT",
        "TRANSACTION_AUTHORIZATION_REQUESTED_EVENT",
        "TRANSACTION_AUTHORIZATION_STATUS_UPDATED_EVENT",
        "TRANSACTION_CLOSURE_SENT_EVENT",
        "TRANSACTION_USER_RECEIPT_ADDED_EVENT",
      ]
    },
    "creationDate": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "id",
    "transactionId",
    "rptId",
    "paymentToken",
    "transactionEventCode",
    "creationDate"
  ],
  "additionalProperties": false
}
