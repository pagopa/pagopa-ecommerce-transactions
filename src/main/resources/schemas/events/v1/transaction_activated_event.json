{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "templates/events/transaction_activated_event/schema.json",
  "properties": {
    "id": {
      "type": "string"
    },
    "transactionId": {
      "type": "string"
    },
    "rptId": {
      "type": "string"
    },
    "paymentToken": {
      "type": "string"
    },
    "transactionEventCode": {
      "const": "TRANSACTION_ACTIVATED_EVENT"
    },
    "creationDate": {
      "type": "string",
      "format": "date-time"
    },
    "data": {
      "type": "object",
      "javaType" : "it.pagopa.generated.ecommerce.events.v1.TransactionActivatedData",
      "properties": {
        "description": {
          "type": "string"
        },
        "amount": {
          "type": "number"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "faultCode": {
          "type": "string"
        },
        "faultCodeString": {
          "type": "string"
        },
        "paymentToken": {
          "type": "string"
        }
      },
      "required": [
        "description",
        "amount",
        "email",
        "faultCode",
        "faultCodeString",
        "paymentToken"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "id",
    "transactionId",
    "rptId",
    "paymentToken",
    "transactionEventCode",
    "creationDate",
    "data"
  ],
  "additionalProperties": false
}
